# –ö–æ–º–∞–Ω–¥–∞ /start
@bot.message_handler(commands=['start'])
def send_welcome(message):
    bot.reply_to(message, "–ù–∞–ø–∏—à–∏—Ç–µ, —á—Ç–æ –≤—ã —Ö–æ—Ç–∏—Ç–µ –≤—ã–±—Ä–æ—Å–∏—Ç—å (–Ω–∞–ø—Ä–∏–º–µ—Ä, '–±—É–º–∞–≥–∞', '–±—É—Ç—ã–ª–∫–∞', '–µ–¥–∞','–º–µ—Ç–∞–ª–ª', '–ª–∞–º–ø–æ—á–∫–∞', '—Å—Ç–µ–∫–ª–æ', '–ø–∞–∫–µ—Ç').")

# –û–±—Ä–∞–±–æ—Ç–∫–∞ —Ç–µ–∫—Å—Ç–æ–≤—ã—Ö —Å–æ–æ–±—â–µ–Ω–∏–π
@bot.message_handler(commands=['sort'])
def sort_waste(message):
    bot.reply_to(message, "–ù–∞–ø–∏—à–∏—Ç–µ, —á—Ç–æ –≤—ã —Ö–æ—Ç–∏—Ç–µ –≤—ã–±—Ä–æ—Å–∏—Ç—å (–Ω–∞–ø—Ä–∏–º–µ—Ä, '–±—É–º–∞–≥–∞', '–±—É—Ç—ã–ª–∫–∞', '–µ–¥–∞').")

@bot.message_handler()
def check_item(message):
    item = message.text.lower()
    if item in waste_sorting:
        bot.reply_to(message, waste_sorting[item])
    else:
        bot.reply_to(message, "ü§î –Ø –Ω–µ –∑–Ω–∞—é, –∫–∞–∫ –ø–æ—Å—Ç—É–ø–∏—Ç—å —Å —ç—Ç–∏–º –ø—Ä–µ–¥–º–µ—Ç–æ–º. –ù–∞–ø–∏—à–∏—Ç–µ —á—Ç–æ-—Ç–æ –¥—Ä—É–≥–æ–µ –∏–ª–∏ —Å–¥–∞–π—Ç–µ –≤ –æ–±—â–∏–µ –æ—Ç—Ö–æ–¥—ã.")
bot.polling()

@bot.message_handler(commands=['decomp'])
def sort_waste(message):
    bot.reply_to(message, "–ù–∞–ø–∏—à–∏—Ç–µ, –ù–∞–ø–∏—à–∏ –Ω–∞–∑–≤–∞–Ω–∏–µ –ø—Ä–µ–¥–º–µ—Ç–∞, –∏ —è —Ä–∞—Å—Å–∫–∞–∂—É, —Å–∫–æ–ª—å–∫–æ –æ–Ω —Ä–∞–∑–ª–∞–≥–∞–µ—Ç—Å—è.")

@bot.message_handler()
def check_item(message):
    item = message.text.lower()
    if item in decomposition_time :
        bot.reply_to(message, decomposition_time[item])
    else:
        bot.reply_to(message,"ü§î –Ø –Ω–µ –∑–Ω–∞—é, —Å–∫–æ–ª—å–∫–æ —Ä–∞–∑–ª–∞–≥–∞–µ—Ç—Å—è —ç—Ç–æ—Ç –ø—Ä–µ–¥–º–µ—Ç. –ù–∞–ø–∏—à–∏—Ç–µ —á—Ç–æ-—Ç–æ –¥—Ä—É–≥–æ–µ.")
bot.polling()
